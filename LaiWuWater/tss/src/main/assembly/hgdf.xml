<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>mms</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>classes</baseDirectory>

    <fileSets>
    	<!--
        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
            	<include>**</include>
            </includes>
        </fileSet>
         -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>${project.artifactId}-${project.version}/etc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <outputDirectory>${project.artifactId}-${project.version}/bin</outputDirectory>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>${project.artifactId}-${project.version}/lib</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>${project.artifactId}-${project.version}/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
           	<excludes>
           		<exclude>${project.groupId}:hgdf-job:jar:${project.version}</exclude>
           	</excludes>
        </dependencySet>
    </dependencySets>

</assembly>