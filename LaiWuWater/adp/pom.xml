			<!-- YUI Compressor -->
			<plugin>
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>compress</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<encoding>UTF-8</encoding>
					<jswarn>false</jswarn>
					<force>true</force>
					<nosuffix>true</nosuffix>
					<linebreakpos>-1</linebreakpos>
					<includes>
						<include>**/*.js</include>
						<include>**/*.css</include>
					</includes>
					<excludes>
						<exclude>**/**min.js</exclude>
						<exclude>**/**min.css</exclude>
						<exclude>**/formula/formula.js</exclude>
						<exclude>**/link/link.js</exclude>
						<exclude>**/activiti/trace-viewer/**</exclude>
					</excludes>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<!-- 处理压缩失败的js文件! -->
								<echo message="开始处理 压缩失败的js文件. 请耐心等待！" />
								<property name="web.source.directory" value="src/main/webapp" />
								<property name="web.source.output.directory"
									value="${project.build.directory}/${project.build.finalName}" />
								<echo message="formula.js 文件！" />
								<copy
									file="${web.source.directory}/plugins/umeditor/dialogs/formula/formula.js"
									todir="${web.source.output.directory}/plugins/umeditor/dialogs/formula/" />
								<echo message="link.js 文件！" />
								<copy
									file="${web.source.directory}/plugins/umeditor/dialogs/link/link.js"
									todir="${web.source.output.directory}/plugins/umeditor/dialogs/link/" />
								<echo message="trace-viewer 文件！" />
								<copy
									todir="${web.source.output.directory}/plugins/activiti/trace-viewer">
									<fileset
										dir="${web.source.directory}/plugins/activiti/trace-viewer" />
								</copy>
								<echo message="成功处理压缩失败的js文件!" />

									<copy
										todir="${web.source.output.directory}/plugins/umeditor/jsp">
										<fileset
											dir="${web.source.directory}/plugins/umeditor/jsp" />
									</copy>
								<!-- 流程打包 -->
								<!--  
								<echo message="开始打包流程文件. 请耐心等待！" />
								<property name="workflow.definition" value="src/main/resources/diagrams" />
								<property name="workflow.deployments" value="src/main/resources/deployments" />
								<delete file="${workflow.deployments}/diary.zip" />
								<delete file="${workflow.deployments}/recruit.zip" />
								<echo message="流程：recruit 开始！" />
								<zip destfile="${workflow.deployments}/recruit.zip" basedir="${workflow.definition}/recruit"
									update="true" includes="*.xml,*.png,*.bpmn" />
								<echo message="流程：diary 开始！" />
								<zip destfile="${workflow.deployments}/diary.zip" basedir="${workflow.definition}/diary"
									update="true" includes="*.xml,*.png,*.bpmn" />
								<echo message="成功打包流程文件!" />
								-->
								<!-- jsp中的js代码压缩 -->
								<echo message="开始用uglifyjs压缩 JSP文件中的js代码. 请耐心等待！" />
								<property name="uglifyjs"
									value="${project.build.directory}/uglify/bin/uglifyjs" />
								<property name="jsp.compress.out.directory"
									value="${project.build.directory}/${project.build.finalName}/WEB-INF" />
								<property name="jsp.compress.directory" value="src/main/webapp/WEB-INF" />
								<apply executable="node" parallel="false" failonerror="true"
									dest="${jsp.compress.directory}">
									<fileset dir="${jsp.compress.directory}" includes="**/*.jsp" />
									<arg line=" ${uglifyjs}" />
									<arg line=" --ascii" />
									<arg line=" -o" />
									<targetfile />
									<srcfile />
									<mapper type="regexp" from="^(.*)\.(jsp)$" to="\1-min.\2" />
								</apply>
								<move todir="${jsp.compress.out.directory}">
									<fileset dir="${jsp.compress.directory}" includes="**/*.jsp" />
									<mapper type="regexp" from="^(.*)-min\.(jsp)$" to="\1.\2" />
								</move>
								<echo message="成功用uglifyjs压缩 JSP文件中的js代码!" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

